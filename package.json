{
  "name": "subify-chrome-extension",
  "version": "1.0.1",
  "description": "YouTube subtitle translator Chrome extension - Translate English subtitles to Sinhala",
  "main": "dist/manifest.json",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "dev:setup": "node scripts/dev-setup.js",
    "build:clean": "rimraf dist && npm run build",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "package": "npm run build && zip -r subify-extension.zip dist/",
    "package:win": "npm run build && powershell Compress-Archive -Path dist/* -DestinationPath subify-extension.zip"
  },
  "keywords": [
    "chrome-extension",
    "youtube",
    "translation",
    "sinhala",
    "subtitle",
    "mymemory-api"
  ],
  "author": "Sameera Herath <sameeraherathmail@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sameeraherath/subify-chrome-extension.git"
  },
  "bugs": {
    "url": "https://github.com/sameeraherath/subify-chrome-extension/issues"
  },
  "homepage": "https://github.com/sameeraherath/subify-chrome-extension#readme",
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "copy-webpack-plugin": "^11.0.0",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
